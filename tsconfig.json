{
    "compilerOptions": {
        "target": "es5",
        "outDir": "built",
        "watch": false,
        "sourceMap": true,
        "removeComments": false,
        "module": "commonjs",
        "lib": [//http://www.typescriptlang.org/docs/handbook/compiler-options.html --lib for typescript 2.x.x
            "es6",//adds Promise, Function, Array, Boolean, IArguments, Number, RegExp, String, ArrayLike, Date, Error, PropertyDescriptor, ArrayBufferView, ArrayBuffer, Uint8Array, Float32Array, Int32Array, PromiseLike
            "dom"//adds HTMLCollection, NodeList, EventTarget, XMLHttpRequest, Event, MessageEvent, WebSocket, CloseEvent, Text, Element
        ]
    },
    // "files": [
    //     "./scripts/beware.blocks.ts"
    // ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}